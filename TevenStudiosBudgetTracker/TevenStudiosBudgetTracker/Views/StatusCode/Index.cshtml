@model int

@{
    var statusCode = Model;
    var statusmessage = "";
    switch (statusCode)
    {
        case 400:
            statusmessage = "Bad request: The request cannot be fulfilled due to bad syntax";
            break;
        case 401:
            statusmessage = "Unauthorised, sorry you cannot view this page";
            break;
        case 403:
            statusmessage = "Forbidden";
            break;
        case 404:
            statusmessage = "Page not found";
            break;
        case 408:
            statusmessage = "The server timed out waiting for the request";
            break;
        default:
            statusmessage = "That's odd... Something we didn't expect happened";
            break;
    }
}
<div class="jumbotron">
    <h1>Error @Model</h1>
    <h3>@statusmessage</h3>
    <p><a href="../">Go back to sign in</a></p>
</div>