﻿@model dynamic  

@{
    ViewData["Title"] = "Employee Page";
}
<div class="container">
    <div class="row">
        <div class="col-lg-7">
            <div>
                <div class="alert alert-info">
                    <h4 class="text-right"> Current Balance</h4>
                    <h1 class="text-right large-text"> $@Model.Budget </h1>
                </div>
            </div>
            <!-- Trigger the modal with a button -->
            <div>
                <div>
                    @if (ViewBag.Result != null)
                    {
                        @if (ViewBag.isSuccess != null && ViewBag.isSuccess)
                        {
                            <h4 class="alert alert-success">@ViewBag.Result</h4>
                        }
                        else
                        {
                            <h4 class="alert alert-danger">@ViewBag.Result</h4>
                        }
                    }
                </div>
            </div>
            <div>
                <button type="button" class="btn btn-info btn-lg right-float-button" data-toggle="modal" data-target="#submitRequest"><span class="glyphicon glyphicon-plus"></span> Request</button>
            </div>
            <br />
            <div>
                <h2> Pending Requests</h2>
                <p>Your requests that are waiting to be approved by your manager.</p>
                <table class="table table-hover table-responsive">

                    <colgroup>
                        <col span="1" style="width: 18%;">
                        <col span="1" style="width: 10%;">
                        <col span="1" style="width: 72%;">
                    </colgroup>

                    <thead>
                        <tr>
                            <th>
                                Date
                            </th>
                            <th class="text-right">
                                Cost
                            </th>
                            <th>
                                Description
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pendingRequest in Model.PendingRequests)
                        {
                            <tr>
                                <td>
                                    @pendingRequest.Date
                                </td>
                                <td class="text-right">
                                    $@pendingRequest.Cost
                                </td>
                                <td>
                                    @pendingRequest.Description
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="">
                <h2 class="text-center"> Past Requests</h2>
                <p class="text-center">A list of all previous transactions, along with their status.</p>
                <table class="table table-hover table-responsive">

                    <colgroup>
                        <col span="1" style="width: 5%;">
                        <col span="1" style="width: 18%;">
                        <col span="1" style="width: 10%;">
                        <col span="1" style="width: 67%;">
                    </colgroup>

                    <thead>
                        <tr>
                            <th>
                                Status
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Cost
                            </th>
                            <th>
                                Description
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var pastRequests in Model.PastRequests)
                        {
                            <tr>
                                <td>
                                    @if (@pastRequests.StatusType == "Approved")
                                    {
                                        <div class="alert alert-success"><span class="glyphicon glyphicon-ok"></span></div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-danger"><span class="glyphicon glyphicon-remove"></span></div>
                                    }
                                </td>
                                <td>
                                    @pastRequests.Date
                                </td>
                                <td>
                                    $@pastRequests.Amount
                                </td>
                                <td>
                                    @pastRequests.Description
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Modal -->
    <div class="modal fade" id="submitRequest" role="dialog">
        <div  id="modal-width" class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Submit a new Request</h4>
                </div>
                <form asp-controller="Home" asp-action="SubmitRequest" method="post">
                    <div class="modal-body">

                        <div class="form-group">
                            <label for="requestCost">Amount:</label>
                            <div class="input-group full-width">
                                <span class="input-group-addon">$</span>
                                <input required type="number" class="form-control" id="requestCost" name="requestCost" value="0" min="0" max="@Model.MaxBudgetRequest">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea required type="text" class="form-control" id="description" name="description"></textarea>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                        <input type="submit" class="btn btn-default">
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


