@model IEnumerable<TevenStudiosBudgetTracker.Models.Transaction>

@{
    ViewData["Title"] = "Employee Page";
}

<h2> Transactions</h2>

<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            UserId
        </th>
        <th>
            Description
        </th>
        <th>
            Amount
        </th>
        <th>
            StatusId
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayTextFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayTextFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusId)
            </td>
        </tr>
    }

</table>
