@model TevenStudiosBudgetTracker.Models.AdminViewData

@{
    ViewData["Title"] = "Admin Page";
}

<h2> Employees</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Date
            </th>
            <th>
                Manager ID
            </th>
            <th>
                Role ID
            </th>
            <th>
                Start Budget
            </th>
            <th>
                Annual Budget
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>

    @for (int i=0; i<Model.Users.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayTextFor(modelItem => Model.Users[i].ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Users[i].Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Users[i].Email)
            </td>
            <td>
                @Html.DisplayTextFor(modelItem => Model.Users[i].StartDate)
            </td>
            <td>
                @Html.DisplayTextFor(modelItem => Model.Users[i].ManagerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Users[i].RoleId)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => Model.Users[i].StartBudget)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => Model.Users[i].AnnualBudget)
            </td>
            <td>
                <button id="editButton" type="button" class="btn btn-info" 
                        onclick="populateModal(@Model.Users[i].ID)"><span class="glyphicon glyphicon-pencil"></span></button>
            </td>
            <td>
                <button id="deleteButton" type="button" class="btn btn-danger"
                        data-id ="@Model.Users[i].ID" data-toggle="modal" data-target="#deleteUser"><span class="glyphicon glyphicon-trash"></span></button>
            </td>
        </tr>
    }
</table>

<div class="container">

    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-lg right-float-button" data-toggle="modal" data-target="#addNewUser">Add New User</button>

    <!-- Add User Modal -->
    <div class="modal fade" id="addNewUser" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Create a New User</h4>
                </div>
                <form asp-controller="Home" asp-action="GetDetails" method="post">
                    <div class="modal-body">

                        <div class="form-group">
                            <label for="name">Name</label>
                            <input required type="text" class="form-control" id="name" name="name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email address:</label>
                            <input required type="email" class="form-control" id="email" name="email">
                        </div>
                        <div class="form-group">
                            <label for="manager">Manager:</label>
                            <select class="form-control" id="manager" name="manager">
                                <option value="-1">None</option>
                                @foreach (var item in Model.Managers)
                                {
                                    <option value="@Html.DisplayTextFor(modelItem => item.ID)">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="role">Role:</label>
                            <select class="form-control" id="role" name="role">
                                <option value="0">Employee</option>
                                <option value="1">Manager</option>
                                <option value="2">Administrator</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="name">Starting Budget ($):</label>
                            <input required type="number" class="form-control" id="budget" name="budget" value="0">
                        </div>
                        <div class="form-group">
                            <label for="name">Annual Budget ($):</label>
                            <input required type="number" class="form-control" id="annualBudget" name="annualBudget" value="3000">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                        <input type="submit" class="btn btn-default">
                    </div>
                </form>
            </div>

        </div>
    </div>

    @if (ViewBag.Result != null)
    {
        <h4>@ViewBag.Result</h4>
    }
</div>

<script type="text/javascript">
    // function called when delete user button is clicked to send user id
    // to the delete user modal for deletion of that user
    $(document).on("click", "#deleteButton", function () {
        var userId = $(this).data('id');
        $("#confirmDelete").val(userId);
    });
</script>

<!-- Delete User Modal -->
<div class="modal fade" id="deleteUser" role="alert">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete User</h4>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this user?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button type="button" value="-1" class="btn btn-success" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(document).on("click", "#confirmDelete", function () {
            var userId = document.getElementById("confirmDelete").value;

            // userId = -1 if the userId was not sent to the modal correctly
            // otherwise makes call to delete user from database
            if (userId != -1) {
                $.ajax({
                    url: '/Home/DeleteUser',
                    data: { UserID: userId },
                }).done(function () {
                    $('#deleteUser').modal('toggle');
                    window.location = "/Home/Admin";
                });
            } else {
                alert("Sorry, there was an error processing your request. Please try again.");
                $('#deleteUser').modal('toggle');
            }
        });
    </script>
</div>

<div class="container">
    <!-- Edit User Modal -->
    <div class="modal fade" id="editUser" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit User</h4>
                </div>
                <form asp-controller="Home" asp-action="EditUser" method="post">
                    <div class="modal-body">

                        <div class="form-group">
                            <label for="name">Name</label>
                            <input required type="text" class="form-control" id="editName" name="editName"> 
                        </div>
                        <div class="form-group">
                            <label for="email">Email Address:</label>
                            <input required type="email" class="form-control" id="editEmail" name="editEmail">
                        </div>
                        <div class="form-group">
                            <label for="manager">Manager:</label>
                            <select class="form-control" id="editManager" name="editManager">
                                <option value="-1">None</option>
                                @foreach (var item in Model.Managers)
                                {
                                    <option value="@Html.DisplayTextFor(modelItem => item.ID)">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="role">Role:</label>
                            <select class="form-control" id="editRole" name="editRole">
                                <option value="0">Administrator</option>
                                <option value="1">Employee</option>
                                <option value="2">Manager</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="name">Start Budget ($):</label>
                            <input required type="number" class="form-control" id="editBudget" name="editBudget">
                        </div>
                        <div class="form-group">
                            <label for="name">Annual Budget ($):</label>
                            <input required type="number" class="form-control" id="editAnnualBudget" name="editAnnualBudget">
                        </div>
                        <div style="visibility:hidden">
                            <input required type="text" class="form-control" id="editID" name="editID">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                        <input id="submitEditUser" type="submit" class="btn btn-default">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function populateModal(UserID) {
            $.post('/Home/GetCurrentUserData/?UserID=' + UserID,
                function (returnedData) {
                    if (returnedData) {
                        
                        userString = JSON.stringify(returnedData);
                        userObject = JSON.parse(userString);
                        console.log("user object: " + userString);
                        document.getElementById("editName").setAttribute("value", userObject["name"]);
                        document.getElementById("editEmail").setAttribute("value", userObject["email"]);
                        $("#editManager").val(userObject["managerId"]);
                        $("#editRole").val(userObject["roleId"]);
                        $("#editID").val(userObject["id"]);
                        document.getElementById("editBudget").setAttribute("value", userObject["startBudget"]);
                        document.getElementById("editAnnualBudget").setAttribute("value", userObject["annualBudget"]);

                        $('#editUser').modal('toggle');
                    } else {
                        alert("Sorry, there was an error processing your request. Please try again.");
                        $('#editUser').modal('toggle');
                    }
                });
            }
    </script>
</div>
