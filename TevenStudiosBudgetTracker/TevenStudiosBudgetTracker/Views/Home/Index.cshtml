<h2> Employees</h2>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            Date
        </th>
        <th>
            ManagerID
        </th>
        <th>
            RoleID
        </th>
        <th>
            Start Budget
        </th>
        <th>
            Edit
        </th>
        <th>
            Delete
        </th>
    </tr>

    @for (int i=0; i<Model.Users.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayTextFor(modelItem => Model.Users[i].ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Users[i].Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Users[i].Email)
            </td>
            <td>
                @Html.DisplayTextFor(modelItem => Model.Users[i].StartDate)
            </td>
            <td>
                @Html.DisplayTextFor(modelItem => Model.Users[i].ManagerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Users[i].RoleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Users[i].StartBudget)
            </td>
            <td>
                <p>Edit user</p>
            </td>
            <td>
                <button type="button" class="btn btn-info btn-lg right-float-button deleteButton"
                        data-id ="@Model.Users[i].ID" data-toggle="modal" data-target="#deleteUser">Delete User</button>
            </td>
        </tr>
    }
</table>

<script type="text/javascript">
    $(document).on("click", ".deleteButton", function () {
        var userId = $(this).data('id');
        $("#confirmDelete").val(userId);
    });
</script>

<!-- Modal -->
<div class="modal fade" id="deleteUser" role="alert">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete User</h4>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this user?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" value="-1" class="btn btn-default" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(document).on("click", "#confirmDelete", function () {
            var userId = document.getElementById("confirmDelete").value;

            if (userId != -1) {
                $.ajax({
                    url: '/Home/DeleteUser',
                    data: { UserID: userId },
                }).done(function () {
                    $('#deleteUser').modal('toggle');
                    window.location = "/Home/Index";
                });
            } else {
                alert("Sorry, there was an error processing your request. Please try again.");
                $('#deleteUser').modal('toggle');
            }
        });
    </script>
</div>