
@model TevenStudiosBudgetTracker.Models.AdminViewData

@{
    ViewData["Title"] = "Admin Page";
}


<h2> Employees</h2>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            ManagerID
        </th>
        <th>
            RoleID
        </th>
        <th>
            Start Budget
        </th>
        <th>
            Edit
        </th>
        <th>
            Delete
        </th>
    </tr>


    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                @Html.DisplayTextFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayTextFor(modelItem => item.ManagerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartBudget)
            </td>
            <td>
                    <button type="button" class="btn btn-info btn-lg right-float-button" data-toggle="modal" data-target="#editUser" value=@item.ID> Edit User</button>

                    @*@Html.ActionLink("Edit", "EditUser", new { UserID = item.ID }, null) *@

                    <!--onclick="location.href='@Url.Action("EditUser", "Home")'"-->

            </td>
            <td>

                <button type="button" class="btn btn-info btn-lg right-float-button" value=@item.ID
                        onclick="location.href='@Url.Action("DeleteUser", "Home" , new { UserID=item.ID })'">Delete User</button>

                @*
                    data-toggle="modal" data-target="#deleteUser"
                    @Html.ActionLink("Delete", "DeleteUser", new { UserID = item.ID }, null)
                    data-url="@Url.Action("UserId", new { userid = item.ID })"
                *@

                @Html.ActionLink("Delete", "DeleteUser", new { UserID = item.ID }, null)
            </td>
        </tr>

    }


mm</table>


<div class="container">

    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-lg right-float-button" data-toggle="modal" data-target="#addNewUser">Add New User</button>

    <!-- Modal -->
    <div class="modal fade" id="addNewUser" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Create a New User</h4>
                </div>
                <form asp-controller="Home" asp-action="GetDetails" method="post">
                    <div class="modal-body">

                        <div class="form-group">
                            <label for="name">Name</label>
                            <input required type="text" class="form-control" id="name" name="name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email address:</label>
                            <input required type="email" class="form-control" id="email" name="email">
                        </div>
                        <div class="form-group">
                            <label for="manager">Manager:</label>
                            <select class="form-control" id="manager" name="manager">
                                <option value="-1">None</option> 
                                @foreach (var item in Model.Managers)
                                {
                                <option value="@Html.DisplayTextFor(modelItem => item.ID)">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="role">Role:</label>
                            <select class="form-control" id="role" name="role">
                                <option value="0">Employee</option>
                                <option value="1">Manager</option>
                                <option value="2">Administrator</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="name">Starting Budget ($):</label>
                            <input required type="number" class="form-control" id="budget" name="budget" value="3000">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <input type="submit" class="btn btn-default">
                    </div>
                </form>
            </div>

        </div>
    </div>

    @if (ViewBag.Result != null)
    {
        <h4>@ViewBag.Result</h4>
    }

</div>



<!-- Modal -->
<div class="modal fade" id="editUser" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit User</h4>
            </div>
            <form asp-controller="Home" asp-action="GetDetails" method="post">
                <div class="modal-body">

                    <div class="form-group">
                        <label for="name">Name</label>
                        <input required type="text" class="form-control" id="name" name="name" value=@Model.Users[0].Name> 
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address:</label>
                        <input required type="email" class="form-control" id="email" name="email" value=@Model.Users[0].Email> 
                    </div>
                    <div class="form-group">
                        <label for="manager">Manager:</label>
                        <select class="form-control" id="manager" name="manager">
                            <option value="-1">None</option>
                            @foreach (var item in Model.Managers)
                            {
                                <option value="@Html.DisplayTextFor(modelItem => item.ID)">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="role">Role:</label>
                        <select class="form-control" id="role" name="role">
                            <option value="0">Employee</option>
                            <option value="1">Manager</option>
                            <option value="2">Administrator</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="name">Starting Budget ($):</label>
                        <input required type="number" class="form-control" id="budget" name="budget" value="3000">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <input type="submit" class="btn btn-default">
                </div>
            </form>
        </div>

    </div>
</div>


