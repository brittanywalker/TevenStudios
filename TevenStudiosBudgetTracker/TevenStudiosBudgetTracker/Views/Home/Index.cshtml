<h2> Employees</h2>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            Date
        </th>
        <th>
            ManagerID
        </th>
        <th>
            RoleID
        </th>
        <th>
            Start Budget
        </th>
        <th>
            Annual Budget
        </th>
        <th>
            Edit
        </th>
        <th>
            Delete
        </th>
    </tr>

    @for (int i=0; i<Model.Users.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayTextFor(modelItem => Model.Users[i].ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Users[i].Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Users[i].Email)
            </td>
            <td>
                @Html.DisplayTextFor(modelItem => Model.Users[i].StartDate)
            </td>
            <td>
                @Html.DisplayTextFor(modelItem => Model.Users[i].ManagerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Users[i].RoleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Users[i].StartBudget)
            </td>
            <td>
                <button id="editButton" type="button" class="btn btn-info" onclick="populateModal(@Model.Users[i].ID)"> Edit User</button>
                @*data-toggle="modal" data-target="#editUser"*@

            </td>
            <td>
                <button type="button" class="btn btn-info btn-lg right-float-button deleteButton"
                        data-id ="@Model.Users[i].ID" data-toggle="modal" data-target="#deleteUser">Delete User</button>
            </td>
        </tr>
    }
</table>

<script type="text/javascript">
    $(document).on("click", ".deleteButton", function () {
        var userId = $(this).data('id');
        $("#confirmDelete").val(userId);
    });
</script>

<!-- Modal -->
<div class="modal fade" id="deleteUser" role="alert">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete User</h4>
            </div>
        </div>
    </div>

    @if (ViewBag.Result != null)
    {
        <h4>@ViewBag.Result</h4>
    }
</div>

<div class="container">

    <button id="hiddenEditBtn" type="button" class="btn btn-info" style="visibility:hidden" data-toggle="modal" data-target="#editUser"></button>

    <!-- Modal -->
    <div class="modal fade" id="editUser" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit User</h4>
                </div>
                <form asp-controller="Home" asp-action="EditUser" method="post">
                    <div class="modal-body">

                        <div class="form-group">
                            <label for="name">Name</label>
                            <input required type="text" class="form-control" id="editName" name="name"> 
                        </div>
                        <div class="form-group">
                            <label for="email">Email Address:</label>
                            <input required type="email" class="form-control" id="editEmail" name="email">
                        </div>
                        <div class="form-group">
                            <label for="manager">Manager:</label>
                            <select class="form-control" id="editManager" name="manager">
                                <option value="-1">None</option>
                                @foreach (var item in Model.Managers)
                                {
                                    <option value="@Html.DisplayTextFor(modelItem => item.ID)">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="role">Role:</label>
                            <select class="form-control" id="editRole" name="role">
                                <option value="0">Employee</option>
                                <option value="1">Manager</option>
                                <option value="2">Administrator</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="name">Current Budget ($):</label>
                            <input required type="number" class="form-control" id="editBudget" name="budget">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <input id="submitEditUser" type="submit" class="btn btn-default">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function populateModal(UserID) {

            $.post('Home/GetCurrentUserData/?UserID=' + UserID,
                function (returnedData) {
                    if (returnedData) {
                        
                        userString = JSON.stringify(returnedData);
                        userObject = JSON.parse(userString);
                        console.log("user object: " + userString);
                        document.getElementById("editName").setAttribute("value", userObject["name"]);
                        document.getElementById("editEmail").setAttribute("value", userObject["email"]);
                        $("#editManager").val(userObject["managerId"]);
                        $("#editRole").val(userObject["roleId"]);
                        document.getElementById("editBudget").setAttribute("value", userObject["startBudget"]);

                        document.getElementById("hiddenEditBtn").click();
                    }
                });
            } else {
                alert("Sorry, there was an error processing your request. Please try again.");
                $('#deleteUser').modal('toggle');
            }
        });
    </script>
</div>
